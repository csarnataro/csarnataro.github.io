---
import { Icon } from "astro-icon";

interface Props {
  icon: string;
  title: string;
  value?: string;
  link?: string;
}

const { icon, title, value, link } = Astro.props;
---
<div  class="flex justify-start py-2 px-1 items-center">
  <span class="w-2 m-2">
    <Icon name={icon} class="w-4 h-4 mr-2" />
  </span>
  <div class="flex-grow font-medium px-2">{title}</div>
  <div
    class={`text-sm font-normal text-right mr-2 ml-3 ${link ? "truncate" : ""}`}
  >
    <div
      style={{
        wordBreak: "break-word",
      }}
    >
      {value}
    </div>
  </div>
</div>
